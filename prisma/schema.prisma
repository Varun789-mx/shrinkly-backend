generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
url      = env("DATABASE_URL")
}

model User { 
  id Int @id @default(autoincrement())
  name String
  email String
  Urls Url[]
}

model Url { 
  id Int @id @default(autoincrement())
  original_url String 
  short_url String
  clicks Int
  timeStamp DateTime @default(now())
  author  User @relation(fields: [id],references: [id])
}

